{
  "name": "@infonomic/lexical-payload",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf .next node_modules",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev -H 0.0.0.0 -p 3000 --turbo",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev -H 0.0.0.0 -p 3000",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=4096\" next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "lint": "biome check . --diagnostic-level=warn",
    "ci": "payload migrate && pnpm build",
    "generate:types": "payload generate:types",
    "generate:schema": "payload-graphql generate:schema",
    "generate:importmap": "payload generate:importmap"
  },
  "engines": {
    "node": "^18.20.2 || >=20.6.0"
  },
  "dependencies": {
    "@lexical/clipboard": "0.35.0",
    "@lexical/code": "0.35.0",
    "@lexical/hashtag": "0.35.0",
    "@lexical/headless": "0.35.0",
    "@lexical/html": "0.35.0",
    "@lexical/link": "0.35.0",
    "@lexical/list": "0.35.0",
    "@lexical/mark": "0.35.0",
    "@lexical/markdown": "0.35.0",
    "@lexical/overflow": "0.35.0",
    "@lexical/react": "0.35.0",
    "@lexical/rich-text": "0.35.0",
    "@lexical/selection": "0.35.0",
    "@lexical/table": "0.35.0",
    "@lexical/utils": "0.35.0",
    "@payloadcms/db-mongodb": "^3.55.1",
    "@payloadcms/db-postgres": "^3.55.1",
    "@payloadcms/next": "^3.55.1",
    "@payloadcms/richtext-lexical": "^3.55.1",
    "@payloadcms/translations": "^3.55.1",
    "@payloadcms/ui": "^3.55.1",
    "classnames": "^2.5.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.4.5",
    "graphql": "^16.11.0",
    "json-schema": "^0.4.0",
    "lexical": "0.35.0",
    "next": "15.4.5",
    "payload": "3.55.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-error-boundary": "^6.0.0",
    "sharp": "0.34.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.3.3",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "esbuild", "sharp", "unrs-resolver"]
  }
}

{
  "name": "@infonomic/lexical-payload",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf .next node_modules",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev -H 0.0.0.0 -p 3000 --turbo",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev -H 0.0.0.0 -p 3000",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=4096\" next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "lint": "biome check . --diagnostic-level=warn",
    "ci": "payload migrate && pnpm build",
    "generate:types": "payload generate:types",
    "generate:schema": "payload-graphql generate:schema",
    "generate:importmap": "payload generate:importmap"
  },
  "engines": {
    "node": "^18.20.2 || >=20.6.0"
  },
  "dependencies": {
    "@lexical/clipboard": "0.38.2",
    "@lexical/code": "0.38.2",
    "@lexical/hashtag": "0.38.2",
    "@lexical/headless": "0.38.2",
    "@lexical/html": "0.38.2",
    "@lexical/link": "0.38.2",
    "@lexical/list": "0.38.2",
    "@lexical/mark": "0.38.2",
    "@lexical/markdown": "0.38.2",
    "@lexical/overflow": "0.38.2",
    "@lexical/react": "0.38.2",
    "@lexical/rich-text": "0.38.2",
    "@lexical/selection": "0.38.2",
    "@lexical/table": "0.38.2",
    "@lexical/utils": "0.38.2",
    "@payloadcms/db-mongodb": "^3.62.0",
    "@payloadcms/db-postgres": "^3.62.0",
    "@payloadcms/next": "^3.62.0",
    "@payloadcms/richtext-lexical": "^3.62.0",
    "@payloadcms/translations": "^3.62.0",
    "@payloadcms/ui": "^3.62.0",
    "classnames": "^2.5.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "graphql": "^16.11.0",
    "json-schema": "^0.4.0",
    "lexical": "0.38.2",
    "next": "16.0.1",
    "payload": "3.62.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "^6.0.0",
    "sharp": "0.34.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.9.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
